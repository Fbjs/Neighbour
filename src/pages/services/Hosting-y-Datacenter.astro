---
import Layout from '~/layouts/LandingLayoutServices.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import Features2 from '~/components/widgets/Features2.astro';
import Features from '~/components/widgets/Features.astro';
import Stats from '~/components/widgets/Stats.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Brands from '~/components/widgets/Brands.astro';
import Prices from '~/components/widgets/Pricing.astro';
import ContactUs from '~/components/widgets/ContactForm.astro';
import Button from '~/components/ui/Button.astro';

import HeroImagen from '~/assets/images/datacenter.jpg';

const metadata = {
  title: 'Soluciones de Hosting y Servidores VPS - Neighbour Technology',
  ignoreTitleTemplate: true
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->
  <Hero2
    tagline="Hosting y Servidores VPS a la Medida"
    title="Soluciones de Hosting y Servidores VPS Personalizados"
    subtitle="Ofrecemos servicios de hosting confiables y servidores VPS de alto rendimiento con opciones de administración de correos y soluciones de datacenter."
    image={{
      src: HeroImagen,
      alt: 'Servicios de Hosting y VPS',
    }}
  >
    <Fragment slot="boton">
      <Button variant="primary" class="open-modal-btn">
        Cotiza tu Plan
      </Button>
      <a href="https://wa.me/56963238857?text=Hola,%20me%20gustaría%20recibir%20más%20información" target="_blank" class="flex items-center w-auto justify-center font-semibold bg-[#25D366] text-white border-[#25D366] px-8 py-2 rounded-full space-x-2">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-brand-whatsapp">
          <path stroke="none" d="M0 0h24v24H0z" fill="none" />
          <path d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9" />
          <path d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1" />
        </svg>
        <span>Chatea con un Asesor</span>
      </a>
    </Fragment>
  </Hero2>

  <!-- Features2 Widget ************** -->
  <Features2
    title="Nuestros Servicios de Hosting y VPS"
    subtitle="Planes flexibles para alojar tu sitio web o implementar servidores VPS personalizados con infraestructura de datacenter segura y escalable."
  />

  <!-- Stats Widget ****************** -->
  <Stats
    title="Resultados de Nuestros Servicios"
    subtitle="Descubre el impacto de nuestras soluciones de hosting y servidores VPS en nuestros clientes."
    stats={[
      { title: 'Sitios Web Hospedados', amount: '1000+', symbol: '+' },
      { title: 'Servidores VPS Implementados', amount: '2000', symbol: '+' },
      { title: 'Clientes Satisfechos', amount: '1500', symbol: '+' },
      { title: 'Uptime Garantizado', amount: '99.99%', symbol: '%' },
    ]}
  />

  <!-- Features Widget *************** -->
  <Features
    id="features"
    title="Características de Nuestros Servicios"
    subtitle="Brindamos soluciones de hosting y VPS con opciones de administración, seguridad y escalabilidad."
    columns={3}
    items={[
      { title: 'Hosting Seguro y Rápido', description: 'Aseguramos disponibilidad, velocidad y seguridad para tu sitio web.', icon: 'tabler:shield-check' },
      { title: 'Servidores VPS Personalizados', description: 'Configuraciones a medida con acceso a recursos dedicados.', icon: 'tabler:cpu' },
      { title: 'Soporte Técnico 24/7', description: 'Especialistas disponibles para resolver cualquier incidencia.', icon: 'tabler:headset' },
    ]}
  />

  <Prices
    title="Nuestros Planes"
    subtitle="Elige el plan que mejor se adapte a tu proyecto"
    prices={[
      {
        title: 'Hosting Básico', price: '10.000', period: 'mensual',
        items: [
            {
                description:'1 dominio incluido',
            },
            {
                description: '5 GB de almacenamiento SSD', 
            },
            {
                description:'1 cuenta de correo', 
            },
            {
                description:'SSL gratuito'
            }
        ],
        callToAction: { text: 'Solicitar', href: '#' },
      },
      {
        title: 'VPS Estándar', price: '60.000', period: 'mensual',
        items: [
            {
                description:'2 CPU vCores',
            },
            {
                description: '4 GB de RAM', 
            },
            {
                description: '50 GB SSD', 
            },
            {
                description:'1 IP dedicada'
            },
            {
                description:'Soporte avanzado'
            }
        ],
        callToAction: { text: 'Solicitar', href: '#' },
        hasRibbon: true, ribbonTitle: 'Más Popular'
      },
      {
        title: 'VPS Premium', price: '120.000', period: 'mensual',
        items: [
            {
                description:'4 CPU vCores',
            },
            {
                description: '8 GB de RAM', 
            },
            {
                description: '100 GB SSD', 
            },
            {
                description:'2 IP dedicada'
            },
            {
                description:'Monitoreo continuo'
            }
        ],
        callToAction: { text: 'Solicitar', href: '#' },
      },
    ]}
  />

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Solicita tu Plan',
        href: 'https://wa.me/56963238857?text=Quiero%20solicitar%20un%20plan%20de%20hosting%20o%20VPS',
        icon: 'tabler:message-circle',
      },
    ]}
  />

  <FAQs
    title="Preguntas Frecuentes"
    items={[
      { title: '¿Qué diferencia hay entre hosting y VPS?', description: 'El hosting es compartido, mientras que el VPS ofrece recursos dedicados.' },
      { title: '¿Cómo puedo escalar mi plan?', description: 'Nuestros planes permiten aumentar recursos sin interrupciones.' },
      { title: '¿Ofrecen seguridad avanzada?', description: 'Sí, con firewalls, certificados SSL y monitoreo constante.' },
      { title: '¿Brindan soporte técnico?', description: 'Sí, ofrecemos soporte 24/7 para hosting y VPS.' },
    ]}
  />
</Layout>
