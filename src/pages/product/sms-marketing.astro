---
import Layout from '~/layouts/LandingLayoutProduct.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import Features2 from '~/components/widgets/Features2.astro';
import Features from '~/components/widgets/Features.astro';
import Stats from '~/components/widgets/Stats.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Brands from '~/components/widgets/Brands.astro';
import ContactUs from '~/components/widgets/ContactForm.astro';
import Button from '~/components/ui/Button.astro';
import HeroImagen from '~/assets/images/sms-marketing.jpg';
import FondoVideo from "~/layouts/FondoVideo.astro";

const metadata = {
  title: 'Campañas de SMS Personalizadas - Neighbour Technology',
  ignoreTitleTemplate: true
};
---
<FondoVideo src="/videos/hero.mp4" />

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Comunicación Instantánea y Efectiva"
    title="Campañas de SMS Personalizadas"
    subtitle="Creamos campañas de SMS efectivas para que puedas comunicarte instantáneamente con tu audiencia, aumentar tus conversiones y generar resultados inmediatos."
    image={{
      src: HeroImagen,
      alt: 'Campañas de SMS personalizadas',
    }}
  >
    <Fragment slot="boton">
      <Button variant="primary" class="open-modal-btn">
        Cotiza tu Envío
      </Button>
      <a href="https://wa.me/56963238857?text=Hola,%20me%20gustaría%20recibir%20más%20información" target="_blank" class="flex items-center w-auto justify-center font-semibold bg-[#25D366] text-white border-[#25D366] px-8 py-2 rounded-full space-x-2">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-brand-whatsapp">
          <path stroke="none" d="M0 0h24v24H0z" fill="none" />
          <path d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9" />
          <path d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1" />
        </svg>
        <span>Chatea con un Asesor</span>
      </a>
    </Fragment>
  </Hero2>

   <!-- Features2 Widget ************** -->

  <Features2
    title="Quiénes Somos"
    subtitle="Con experiencia en la creación de campañas de SMS, ayudamos a empresas a llegar a sus clientes con mensajes personalizados que generan una respuesta rápida y directa."
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>
 

 <!-- Stats Widget ****************** -->

  <Stats
  classes={{
    container: 'stat-container bg-dark bg-opacity-70 my-10',
  }}
    title="Resultados de Nuestras Campañas de SMS"
    subtitle="Estos resultados reflejan el impacto positivo de nuestras campañas de SMS en la interacción y conversión de nuestros clientes."
    stats={[
      { title: 'Mensajes Enviados', amount: '1M+' },
      { title: 'Tasa de Apertura', amount: '98%' },
      { title: 'Tasa de Respuesta', amount: '45%' },
      { title: 'Clientes Satisfechos', amount: '300+' },
    ]}
  />

 <!-- Features Widget *************** -->

 <Features
  id="features"
  title="Características de Nuestras Campañas de SMS"
  subtitle="Nuestras campañas de SMS están diseñadas para ser rápidas, directas y efectivas."
  columns={3}
  items={[
    {
      title: 'Segmentación Precisa',
      description:
        'Creamos listas segmentadas para que puedas enviar mensajes relevantes a tu público objetivo en el momento ideal.',
      icon: 'tabler:users',
    },
    {
      title: 'Automatización de Mensajes',
      description:
        'Automatizamos tus campañas de SMS para que se envíen en momentos clave, maximizando el impacto y la efectividad.',
      icon: 'tabler:clock',
    },
    {
      title: 'Análisis de Resultados',
      description:
        'Te proporcionamos reportes detallados sobre la tasa de apertura, respuestas y conversiones para medir el éxito de cada campaña.',
      icon: 'tabler:chart-bar',
    },
    {
      title: 'Entrega Inmediata',
      description: 
        'Garantizamos la entrega inmediata de tus mensajes a tu audiencia, asegurando que lleguen en el momento preciso.',
      icon: 'tabler:message-circle',
    },
    {
      title: 'Soporte Técnico',
      description:
        'Te ofrecemos soporte continuo para que tus campañas de SMS siempre estén funcionando sin interrupciones.',
      icon: 'tabler:headset',
    },
  ]}
/>

<CallToAction
  actions={[
    {
      variant: 'primary',
      target: '_blank',
      text: 'Inicia tu Campaña de SMS',
      href: 'https://wa.me/56963238857?text=Quiero%20iniciar%20una%20campaña%20de%20SMS',
      icon: 'tabler:message-circle',
    },
  ]}
>
  <Fragment slot="title">Llega a tus clientes en tiempo real</Fragment>

  <Fragment slot="subtitle">
    Nuestras campañas de SMS te permiten comunicarte instantáneamente con tus clientes y obtener resultados rápidos. ¡Contáctanos para empezar!
  </Fragment>
  <Fragment slot="boton">
    <Button variant="primary" class="open-modal-btn">
      Cotiza tu Envío
    </Button>
    
  </Fragment>
</CallToAction>


<FAQs
title="Preguntas Frecuentes"
items={[
  {
    title: '¿Qué es una campaña de SMS?',
    description:
      'Una campaña de SMS es una estrategia de comunicación directa mediante mensajes de texto, diseñada para enviar información relevante o promociones a tus clientes de manera instantánea.',
  },
  {
    title: '¿Cómo aseguran una alta tasa de respuesta?',
    description:
      'La segmentación precisa y los mensajes personalizados son clave para asegurar que tus clientes abran y respondan a los SMS rápidamente.',
  },
  {
    title: '¿Puedo automatizar mis campañas?',
    description:
      'Sí, ofrecemos automatización completa para que los mensajes se envíen en momentos clave, maximizando el impacto en tus clientes.',
  },
  {
    title: '¿Cómo puedo medir los resultados?',
    description:
      'Te proporcionamos reportes detallados que incluyen la tasa de apertura, tasa de respuesta y conversiones para que puedas medir el éxito de cada campaña.',
  },
  {
    title: '¿Qué necesito para empezar una campaña?',
    description:
      'Solo necesitas tu lista de contactos y el mensaje que deseas enviar. Nosotros nos encargamos de todo el proceso, desde el envío hasta el análisis de resultados.',
  },
]}
/>

</Layout>
