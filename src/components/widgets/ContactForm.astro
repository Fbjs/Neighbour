const openModal = () => {
  const modal = document.getElementById('contact-modal');
  modal.classList.remove('hidden');
  modal.classList.add('flex'); // Aseguramos que el modal sea visible
};

const closeModal = () => {
  const modal = document.getElementById('contact-modal');
  modal.classList.add('hidden');
  modal.classList.remove('flex'); // Ocultamos el modal cuando se cierra
};

