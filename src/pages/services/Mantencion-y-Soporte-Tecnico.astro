---
import Layout from '~/layouts/LandingLayoutServices.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import Features2 from '~/components/widgets/Features2.astro';
import Features from '~/components/widgets/Features.astro';
import Stats from '~/components/widgets/Stats.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Brands from '~/components/widgets/Brands.astro';
import Prices from '~/components/widgets/Pricing.astro';
import ContactUs from '~/components/widgets/ContactForm.astro';
import Button from '~/components/ui/Button.astro';

import HeroImagen from '~/assets/images/mantencion.jpg';

const metadata = {
  title: 'Mantenimiento de Redes, Software y Hardware - Neighbour Technology',
  ignoreTitleTemplate: true

};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Mantén tus Sistemas Operando Sin Interrupciones"
    title="Mantenimiento Integral de Redes, Software y Hardware"
    subtitle="Ofrecemos servicios especializados para garantizar el correcto funcionamiento de tu infraestructura tecnológica, asegurando rendimiento, estabilidad y seguridad."
    
    image={{
      src: HeroImagen,
      alt: 'Mantenimiento de redes, software y hardware',
    }}
  >
    <Fragment slot="boton">
      <button class="open-modal-btn px-8 py-3 rounded-lg bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 transition duration-300 text-white shadow-lg">
        Cotiza tu Plan
      </button>
      <Button variant='whatsapp',
      text='Chatea con un Asesor',
      phone='56963238857'></Button>
    </Fragment>

  </Hero2>


   <!-- Features2 Widget ************** -->

  <Features2
    classes={{
      container: ' bg-dark bg-opacity-70 my-5',
    }}
    title="Nuestros Servicios"
    subtitle="Nos especializamos en el mantenimiento preventivo y correctivo de redes, software y hardware. Con un equipo altamente capacitado, aseguramos que tus sistemas estén siempre operativos y optimizados para el máximo rendimiento."
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent stat-container"></div>
    </Fragment>
  </Features2>
 

 <!-- Stats Widget ****************** -->

  <Stats
    classes={{
      container: 'tag bg-dark bg-opacity-70 my-5',
    }}
    title="Resultados de Nuestros Servicios de Mantenimiento"
    subtitle="A continuación, algunos de los resultados que nuestros clientes han experimentado tras utilizar nuestros servicios de mantenimiento tecnológico."
    stats={[
      { title: 'Sistemas Optimizados', amount: '500', symbol: '+' },
      { title: 'Redes Mantenidas', amount: '120', symbol: '+' },
      { title: 'Clientes Satisfechos', amount: '350', symbol: '+' },
      { title: 'Equipos Sin Fallos', amount: '99', symbol: '%' },
    ]}
  />

 <!-- Features Widget *************** -->

 <Features
  id="features"
  title="¿Qué Incluyen Nuestros Servicios?"
  subtitle="Nuestras soluciones de mantenimiento están diseñadas para cubrir todas las necesidades tecnológicas de tu empresa, desde redes hasta hardware."
