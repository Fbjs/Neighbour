---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import HeroCarousel from '~/components/widgets/HeroCarousel.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Slider from '~/components/widgets/Slider.astro';

import image2 from '~/assets/images/FENIX_contact_center.png';
import ContactForm from '~/components/widgets/ContactForm.astro';
import Brands from '~/components/widgets/Brands.astro';
import Button from '~/components/ui/Button.astro';

import Santander from '~/assets/images/Santander.jpg';
import Regalariza from '~/assets/images/regalariza.jpg';
import MundoCreditos from '~/assets/images/Mundo_creditos.jpg';
import MarubeniCredit from '~/assets/images/Marubeni_credit.png';
import MAF from '~/assets/images/MAF.jpg';
import IACC from '~/assets/images/IACC.png';
import IPLACEX from '~/assets/images/IPLACEX.png';
import GrupoMok from '~/assets/images/grupo_mok.png';
import Falabella from '~/assets/images/fallabella.png';
import ClinicaLasCondes from '~/assets/images/Clinica-Las-Condes.jpg';
import ClinicaCordillera from '~/assets/images/clinica-cordillera.jpg';
import Clinica_U_de_los_andes from '~/assets/images/Clinica_U_de_los_andes.png';






const metadata = {
  title: 'Neighbour Technology — Soluciones Tecnológicas Innovadoras',
  ignoreTitleTemplate: true,
};
---

<style>
  .bg-fondo {
    background-image: url('/src/assets/images/tex5.jpg'); /* Reemplaza con la ruta a tu imagen */
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    width: 100%;
    height: 100%;
  }
</style>



<Layout metadata={metadata}>
  <!----HeroCarousel />----->
  <Slider>
    <Fragment slot="boton">
      
      <Button variant="primary" class="open-modal-btn">
        Cotiza tu Proyecto
      </Button>
      <a href="https://wa.me/56963238857?text=Hola,%20me%20gustaría%20recibir%20más%20información" target="_blank" class="flex items-center justify-center font-semibold bg-[#25D366] text-white border-[#25D366] px-8 py-2 rounded-full space-x-2">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-brand-whatsapp">
          <path stroke="none" d="M0 0h24v24H0z" fill="none" />
          <path d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9" />
          <path d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1" />
        </svg>
        <span>Chatea con un Asesor</span>
      </a>
      
      
    </Fragment>
  </Slider>


  <Note />

  <!-- Features Widget *************** -->

  


  <Features
    id="features"
    tagline="Servicios"
    title="Lo que ofrecemos en Neighbour Technology"
    subtitle="Metodología centrada en la mejora continua, la sinergia y la creatividad colaborativa para optimizar recursos y crear herramientas digitales innovadoras."
    items={[
      {
        title: 'Mantenimiento y Reparación de Hardware',
        description:
          'Mantenimiento preventivo, reparaciones, actualizaciones, gestión de inventario y optimización de recursos.',
        icon: 'tabler:tool',
      },
      {
        title: 'Desarrollo de Software y Sistemas Informáticos',
        description:
          'Desarrollos web, intranet, sistemas de inventario, plataformas e-commerce, control documental y automatización de procesos.',
        icon: 'tabler:code',
      },
      {
        title: 'Outsourcing de Especialistas de Tecnología',
        description:
          'BackOffice, analista de datos, soporte técnico, desarrolladores, gestión de redes y consultoría TI.',
        icon: 'tabler:users',
      },
      {
        title: 'Data Center',
        description:
          'Infraestructura de vanguardia para garantizar la seguridad, fiabilidad y rendimiento de tus datos con servicios de hosting, correos corporativos y servidores.',
        icon: 'tabler:server',
      },
      {
        title: 'Servicios TELCO',
        description:
          'Soluciones integrales de telecomunicaciones con telefonía IP y SMS eficientes para potenciar la productividad empresarial.',
        icon: 'tabler:phone',
      },
      {
        title: 'Marketing Digital',
        description:
          'Campañas de generación de LEADS, landing pages con formatos audiovisuales, selección de canales de difusión y chatbots para flujos personalizados.',
        icon: 'tabler:chart-line',
      },
    ]}
  />

  


<div class="bg-fondo">
    <!-- Features2 Widget ************** -->

    <Features2
    title="Otras Especialidades"
    subtitle="Expertos en Soluciones Tecnológicas"
    tagline="Especialidades"
    items={[
      {
        title: 'Experto en VICIdial',
        description: 'Accede a un centro de contacto completo con marcación predictiva y gestión de agentes.',
        icon: 'tabler:device-desktop',
      },
      {
        title: 'Experto en Asterisk',
        description: 'Integra voz en una plataforma escalable para optimizar tus comunicaciones.',
        icon: 'tabler:phone-call',
      },
      {
        title: 'Gestor Integral VICIdial – Asterisk',
        description: 'Gestión de acciones y reportes de manera efectiva para optimizar tus operaciones.',
        icon: 'tabler:report',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 "></div>
    </Fragment>
  </Features2>

  <!-- Stats Widget ****************** -->
  <div class="bg-blue-50 dark:bg-dark p-6 my-8">
    <Stats
      stats={[
        { title: 'Clientes Satisfechos', amount: '500+' },
        { title: 'Proyectos Completados', amount: '1200+' },
        { title: 'Años de Experiencia', amount: '10+' },
        { title: 'Expertos en Tecnología', amount: '50+' },
      ]}
    />



    <Brands
    title="Instituciones que Confían en Neighbour Technology"
    subtitle="En Neighbour Technology, colaboramos con estas organizaciones para ofrecer soluciones tecnológicas a medida, mejorando su infraestructura y optimizando procesos."
    icons={[]}
    images={[
      {
        src: Santander.src,
        alt: 'Santander',
      },
      {
        src: Regalariza.src,
        alt: 'Regalariza',
      },
      {
        src: MundoCreditos.src,
        alt: 'MundoCreditos',
      },
      {
        src: MarubeniCredit.src,
        alt: 'MarubeniCredit',
      },
      {
        src: MAF.src,
        alt: 'MAF',
      },
      {
        src: IACC.src,
        alt: 'IACC',
      },
      {
        src: IPLACEX.src,
        alt: 'IPLACEX',
      },
      {
        src: GrupoMok.src,
        alt: 'GrupoMok',
      },
      {
        src: Falabella.src,
        alt: 'Falabella',
      },
      {
        src: ClinicaLasCondes.src,
        alt: 'ClinicaLasCondes',
      },
      {
        src: ClinicaCordillera.src,
        alt: 'ClinicaCordillera',
      },
      {
        src: Clinica_U_de_los_andes.src,
        alt: 'Clinica_U_de_los_andes',
      },
    ]}
  />
  </div>
  

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Solicita más información',
        href: 'mailto:admintrador@neighbour.cl',
        icon: 'tabler:mail',
      },
    ]}
  >
    <Fragment slot="title">
      ¡Potencia tu Negocio con <br class="block sm:hidden" /><span class="sm:whitespace-nowrap">Neighbour Technology!</span>
    </Fragment>

    <Fragment slot="subtitle">
      Contacta con nosotros para más información sobre nuestros servicios y soluciones tecnológicas.
    </Fragment>

    <Fragment slot="boton">
      <Button variant="primary" class="open-modal-btn">
        Cotiza tu Proyecto
      </Button>
    </Fragment>

  </CallToAction>

</div>

</Layout>
