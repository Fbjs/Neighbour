<script>
  const news = [
    {
      text: "¡Descubre cómo optimizamos sitios web para mejorar tu negocio!",
      link: "/services/web-page",
    },
    {
      text: "¿Sabías que podemos optimizar tus procesos empresariales? Conoce más.",
      link: "/services/optimizacion-procesos",
    },
    {
      text: "Aumenta tus ventas con nuestras estrategias de marketing digital.",
      link: "/services/marketing-digital",
    }
  ];

  let currentIndex = 0;
  const dynamicLink = document.getElementById('dynamic-link');
  let intervalId;

  function rotateNews() {
    if (dynamicLink) {
      currentIndex = (currentIndex + 1) % news.length;
      dynamicLink.textContent = news[currentIndex].text;
      dynamicLink.href = news[currentIndex].link;
    }
  }

  function startNewsRotation() {
    intervalId = setInterval(rotateNews, 5000);
  }

  function stopNewsRotation() {
    clearInterval(intervalId);
  }

  window.addEventListener('load', startNewsRotation);
  window.addEventListener('beforeunload', stopNewsRotation);

  // También puedes agregar esta comprobación para evitar que funcione si el elemento deja de existir
  const observer = new MutationObserver(() => {
    if (!document.getElementById('dynamic-link')) {
      stopNewsRotation();
      observer.disconnect(); // Detenemos el observer cuando ya no es necesario
    }
  });

  observer.observe(document.body, { childList: true, subtree: true });
</script>
