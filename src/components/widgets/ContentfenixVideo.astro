---
import type { Content as Props } from '~/types';
import Headline from '../ui/Headline.astro';
import WidgetWrapper from '../ui/WidgetWrapper.astro';
import Image from '~/components/common/Image.astro';
import Button from '~/components/ui/Button.astro';
import ItemGrid from '../ui/ItemGrid.astro';

import tex5 from '~/assets/images/tex5.jpg';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  content = await Astro.slots.render('content'),
  callToAction,
  items = [],
  columns,
  image = await Astro.slots.render('image'),
  video = await Astro.slots.render('video'),  // Nueva propiedad para video
  isReversed = false,
  isAfterContent = false,
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper
  id={id}
  isDark={isDark}
  containerClass={`max-w-7xl mx-auto ${isAfterContent ? 'pt-0 md:pt-0 lg:pt-0' : ''} ${classes?.container ?? ''}`}
  bg={bg}
>
  
  <div class= "flex-max-w-7xl my-3">
    <p class="text-2xl text-center font-black text-blue-900"> Hagamos un recorrido por FENIX </p>
  </div>
  
      <div aria-hidden="true" class="mt-10 md:mt-0 md:basis-1/2">
        {
          video && (
            <div class="relative m-auto max-w-4xl">
              <video
                class="mx-auto w-full rounded-lg shadow-lg"
                controls
                autoplay
                muted
                loop
                width="500"
              >
                <source src={video.src} type={video.type} />
                Your browser does not support the video tag.
              </video>
            </div>
          )
        }
       
  </div>
</WidgetWrapper>
