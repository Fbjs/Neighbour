---
import Layout from '~/layouts/LandingLayoutServices.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import Features2 from '~/components/widgets/Features2.astro';
import Features from '~/components/widgets/Features.astro';
import Stats from '~/components/widgets/Stats.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Brands from '~/components/widgets/Brands.astro';
import Prices from '~/components/widgets/Pricing.astro';


import HeroImagen from '~/assets/images/datacenter.jpg';

const metadata = {
  title: 'Servidores VPS a la Medida y Datacenter',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Potencia y Flexibilidad con VPS"
    title="Servidores VPS Personalizados y Soluciones de Datacenter"
    subtitle="Te ofrecemos servidores VPS a la medida para satisfacer las necesidades de tu negocio, garantizando rendimiento, seguridad y escalabilidad en nuestro moderno datacenter."
    actions={[
      { variant: 'primary', text: 'Contáctanos', href: 'https://wa.me/56963238857?text=Hola%2C%20estoy%20interesado%20en%20sus%20servicios%20de%20VPS%20y%20Datacenter', icon: 'tabler:square-rounded-arrow-right' },
      { text: 'Descubre más', href: '/' },
    ]}
    image={{
      src: HeroImagen,
      alt: 'Servidores VPS y Datacenter',
    }}
  />

   <!-- Features2 Widget ************** -->

  <Features2
    title="Nuestros Servicios de VPS y Datacenter"
    subtitle="Ofrecemos servidores virtuales privados (VPS) altamente configurables, con acceso completo a recursos dedicados y soporte especializado. Nuestro datacenter está diseñado para garantizar la máxima seguridad, rendimiento y disponibilidad."
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>
 

 <!-- Stats Widget ****************** -->

  <Stats
    title="Resultados de Nuestras Soluciones VPS"
    subtitle="Estos resultados reflejan la confianza que nuestros clientes han depositado en nuestras soluciones de VPS y Datacenter a medida."
    stats={[
      { title: 'Servidores VPS Implementados', amount: '2000+' },
      { title: 'Uptime Garantizado', amount: '99.99%' },
      { title: 'Clientes Empresariales Satisfechos', amount: '1000+' },
      { title: 'Monitoreo Continuo', amount: '24/7' },
    ]}
  />

 <!-- Features Widget *************** -->

 <Features
  id="features"
  title="Características de Nuestros Servidores VPS"
  subtitle="Nuestras soluciones VPS están diseñadas para adaptarse a las necesidades específicas de tu negocio, garantizando seguridad y eficiencia."
  columns={3}
  items={[
    {
      title: 'Rendimiento Dedicado',
      description:
        'Nuestros VPS te ofrecen acceso a recursos dedicados, como CPU, RAM y almacenamiento, asegurando un rendimiento óptimo para tus aplicaciones.',
      icon: 'tabler:cpu',
    },
    {
      title: 'Escalabilidad Flexible',
      description:
        'Aumenta o disminuye los recursos según las demandas de tu proyecto, sin interrupciones en el servicio.',
      icon: 'tabler:arrows-maximize',
    },
    {
      title: 'Soporte Técnico Especializado',
      description:
        'Contamos con un equipo de expertos disponibles 24/7 para ayudarte con cualquier aspecto técnico relacionado con tu VPS o infraestructura de datacenter.',
      icon: 'tabler:headset',
    },
  ]}
/>

<Prices
  title="Nuestros Planes de VPS"
  subtitle="Elige el plan que mejor se ajuste a las necesidades de tu infraestructura"
  prices={[
    {
      title: 'Básico',
