<form
  action="#"
  method="POST"
  class="max-w-md mx-auto bg-gray-900/90 p-6 rounded-lg shadow-lg space-y-4"
>
  <h2 class="text-center text-xl font-bold text-white">
    Quiero asesoría de un especialista
  </h2>

  <!-- Nombre -->
  Nombre y Apellido
  <input
    type="text"
    name="name"
    placeholder="Ej: Juan Pérez"
    required
    class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm text-gray-900 focus:outline-none focus:ring-2 focus:ring-purple-500"
  />

  <!-- Email -->
   E-mail Corporativo
  <input
    type="email"
    name="email"
    placeholder="empresa@mail.com"
    required
    class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm text-gray-900 focus:outline-none focus:ring-2 focus:ring-purple-500"
  />

  <!-- Teléfono -->
   Número de Teléfono
  <input
    type="tel"
    name="phone"
    placeholder="+569 87654321"
    required
    class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm text-gray-900 focus:outline-none focus:ring-2 focus:ring-purple-500"
  />

  <!-- Empresa -->
   Nombre de la Empresa
  <input
    type="text"
    name="company"
    placeholder="Ej: Empresa Asociados SPA"
    required
    class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm text-gray-900 focus:outline-none focus:ring-2 focus:ring-purple-500"
  />

  <!-- Botón -->
  <button
    type="submit"
    class="w-full rounded-md bg-gradient-to-r from-cyan-400 to-blue-600 py-2 text-white font-semibold shadow hover:opacity-90 transition"
  >
    Contáctame
  </button>
</form>